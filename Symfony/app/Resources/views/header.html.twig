{# app/Resources/views/header.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('image/apple-icon.png')  }}" />
    <link rel="icon" type="image/png" href="{{ asset('image/favicon.png')  }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>{% block title %}Yalla - Administration{% endblock %}</title>
    {% block stylesheets %}{% endblock %}

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="{{ asset('css/style.css')  }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css')  }}" rel="stylesheet" />
    <link href="{{ asset('css/material-dashboard.css')  }}" rel="stylesheet">

    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="wrapper">

    <div class="sidebar" data-color="orange" data-image="{{ asset('image/sidebar-1.jpg')  }}">

        <div class="logo">
            <a href="#" class="simple-text"><img class="img-responsive width" src="{{ asset('image/yallalogo.png')  }}" alt=""></a>
        </div>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="active">
                    <a href="{{ path('home') }}">
                        <i class="material-icons">dashboard</i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('articles') }}">
                        <i class="material-icons">list</i>
                        <p>Liste Article</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('articles publies') }}">
                        <i class="material-icons">check_box</i>
                        <p>Articles Publiés</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('ajout article') }}">
                        <i class="material-icons">library_books</i>
                        <p>Rédiger Article</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('redacteurs') }}">
                        <i class="material-icons">people</i>
                        <p>Rédacteurs</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('fonctions redacteurs') }}">
                        <i class="material-icons">work</i>
                        <p>Fonction rédacteurs</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('langues articles') }}">
                        <i class="material-icons">language</i>
                        <p>Langues articles</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('categories articles') }}">
                        <i class="material-icons">folder</i>
                        <p>Catégories</p>
                    </a>
                </li>
            </ul>
        </div>
        {% endif %}
    </div>

    <div class="main-panel">


