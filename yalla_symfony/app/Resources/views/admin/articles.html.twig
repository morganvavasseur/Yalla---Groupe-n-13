{# app/Resources/views/admin/articles.html.twig #}

{{ include('admin/header.html.twig')}}

{% block body %}

{{ include('admin/nav.html.twig')}}
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="orange">
                        <h1 class="title h1">Articles</h1>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th>Titre</th>
                                        <th>Catégorie</th>
                                        <th>Rédacteur</th>
                                        <th>Date de publication</th>
                                        <th>Version</th>
                                        <th>Modifier</th>
                                        <th>Supprimer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for article in articles %}
                                    <tr>
                                        <td><a href="/admin/article/{{ article.slugArticle }}">{{ article.titreArticle }}</a></td>
                                        <td>{{ article.idCategorie.nomCategorie }}</td>
                                        <td>{{ article.idRedacteur.prenomRedacteur }} {{ article.idRedacteur.nomRedacteur }}</td>
                                        <td>{{ article.dateArticle.format('j/m/Y, H:m:s')}}</td>
                                        <td>{{ article.versionArticle }}</td>
                                        <td><a href="/admin/article/modifier/{{ article.slugArticle }}" class="btn btn-warning">M</a></td>
                                        <td><a href="/admin/article/supprimer/{{ article.slugArticle }}" class="btn btn-danger">X</a></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}

{{ include('admin/footer.html.twig')}}